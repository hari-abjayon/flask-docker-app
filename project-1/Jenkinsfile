pipeline {
    agent any
 
    environment {
        IMAGE_NAME = "hariabjayon15/flask-app"
    }
 
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    // Print the workspace path
                    echo "Workspace directory: ${env.WORKSPACE}"
                    
                    // Convert to correct format
                    def WORKDIR = "${env.WORKSPACE}/project-1".replace("\\", "/")
                    
                    // Verify project directory after checkout
                    bat "dir ${WORKDIR}"  // Use 'dir' instead of 'ls' for Windows
                }
            }
        }
 
        stage('Build Docker Image') {
            steps {
                script {
                    def BUILD_NUMBER = env.BUILD_NUMBER
                    def WORKDIR = "${env.WORKSPACE}/project-1".replace("\\", "/")
 
                    echo "Checking project directory at: ${WORKDIR}"
                    
                    // Verify project directory exists
                    bat "dir ${WORKDIR} || echo Project directory missing!"
 
                    // Build and tag the Docker image
                    bat "docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} ${WORKDIR}"
                    bat "docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest"
                }
            }
        }
 
        stage('Push to Docker Hub') {
            steps {
                script {
                    def BUILD_NUMBER = env.BUILD_NUMBER
 
                    // Authenticate with Docker Hub
                    bat "echo ${DOCKER_HUB_PASSWORD} | docker login -u ${DOCKER_HUB_USERNAME} --password-stdin"
 
                    // Push images to Docker Hub
                    bat "docker push ${IMAGE_NAME}:${BUILD_NUMBER}"
                    bat "docker push ${IMAGE_NAME}:latest"
                }
            }
        }
    }
 
    post {
        failure {
            echo "Build failed. Please check the logs."
        }
        success {
            echo "Build and push to Docker Hub completed successfully."
        }
    }
}
 
 