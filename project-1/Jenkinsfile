pipeline {
    agent any
 
    environment {
        IMAGE_NAME = "hariabjayon15/flask-app"
    }
 
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
                script {
                    echo "Checked out code into workspace: ${WORKSPACE}"
                }
            }
        }
 
        stage('Build Docker Image') {
            steps {
                script {
                    def BUILD_NUMBER = env.BUILD_NUMBER
                    def WORKDIR = "${WORKSPACE}/project-1"
                    
                    // Verify workspace content
                    sh "ls -la ${WORKDIR}"
 
                    // Build and tag the Docker image
                    sh "docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} ${WORKDIR}"
                    sh "docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest"
                }
            }
        }
 
        stage('Push to Docker Hub') {
            steps {
                script {
                    def BUILD_NUMBER = env.BUILD_NUMBER
 
                    // Authenticate with Docker Hub (ensure credentials are set up in Jenkins)
                    sh "echo ${DOCKER_HUB_PASSWORD} | docker login -u ${DOCKER_HUB_USERNAME} --password-stdin"
 
                    // Push images to Docker Hub
                    sh "docker push ${IMAGE_NAME}:${BUILD_NUMBER}"
                    sh "docker push ${IMAGE_NAME}:latest"
                }
            }
        }
    }
 
    post {
        failure {
            echo "Build failed. Please check the logs."
        }
        success {
            echo "Build and push to Docker Hub completed successfully."
        }
    }
}
 