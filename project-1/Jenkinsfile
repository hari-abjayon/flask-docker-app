pipeline {
    agent any
 
    environment {
        IMAGE_NAME = "hariabjayon15/flask-app"
        BUILD_TAG = "${env.BUILD_NUMBER}"  // Jenkins build number as tag
        FULL_IMAGE_NAME = "hariabjayon15/flask-app:${env.BUILD_NUMBER}"
    }
 
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/YOUR_GITHUB_USERNAME/YOUR_REPO.git'
            }
        }
 
        stage('Build Docker Image') {
            steps {
                sh "docker build -t $FULL_IMAGE_NAME ."
            }
        }
 
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'docker-hub-token', variable: 'DOCKER_PASS')]) {
                    sh "echo $DOCKER_PASS | docker login -u hariabjayon15 --password-stdin"
                }
            }
        }
 
        stage('Push Docker Image') {
            steps {
                sh "docker push $FULL_IMAGE_NAME"
                sh "docker tag $FULL_IMAGE_NAME $IMAGE_NAME:latest"
                sh "docker push $IMAGE_NAME:latest"
            }
        }
 
        stage('Cleanup Unused Docker Images') {
            steps {
                sh "docker rmi $FULL_IMAGE_NAME || true"
            }
        }
    }
 
    post {
        success {
            echo "✅ Build and push successful!"
        }
        failure {
            echo "❌ Build or push failed!"
        }
    }
}
 